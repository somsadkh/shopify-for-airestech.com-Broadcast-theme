{{ 'announcement-investors.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.8 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.8 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  {% if section.settings.border %}
    .announcement-investors {
      border-bottom: 1px solid;
    }
  {% endif %}
{%- endstyle -%}

<div class="announcement-investors section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="announcement-investors__container">
    <div class="announcement-investors__left">
      <a target="_blank" href="{{- section.settings.link -}}" class="announcement-investors__left--link">
        {{- section.settings.link_text -}}
      </a>
    </div>
    <div class="announcement-investors__right">
      {% if section.settings.social %}
        {%- render 'social-icons-investors' -%}
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Announcement investors",
    "class": "section",
    "settings": [
      {
        "type": "header",
        "content": "Colors"
      },
      {
        "type": "color_scheme",
        "id": "section_color_scheme",
        "label": "Color scheme",
        "default": "scheme-1"
      },
      {
        "type": "header",
        "content": "Left content"
      },
      {
        "type": "inline_richtext",
        "id": "link_text",
        "label": "Link text"
      }, {
        "type": "url",
        "id": "link",
        "label": "Link"
      }, {
        "type": "header",
        "content": "Right content"
      }, {
        "type": "checkbox",
        "id": "social",
        "label": "Show social icons",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "border",
        "label": "Show Border",
        "default": true
      },
      {
        "type": "header",
        "content": "Padding"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Bottom",
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "Announcement investors"
      }
    ]
  }
{% endschema %}