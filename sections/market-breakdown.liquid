{{ 'market-breakdown.css' | asset_url | stylesheet_tag }}

<section class="market-breakdown">
    <div class="market-breakdown__wrapper">
        <div class="market-breakdown__title" style="font-size:{{ section.settings.fs_heading }}px; color: {{ section.settings.heading_cl }};">{{ section.settings.title }}</div>
        <div class="market-breakdown__block">
            <div class="market-breakdown__item">
                <div class="market-breakdown__item--title" style="font-size:{{ section.settings.fs_title_1 }}px; color: {{ section.settings.title_cl_1 }};">{{ section.settings.exchange }}</div>
                <div class="market-breakdown__item--content">
                    <div class="market-breakdown__item--text" style="font-size:{{ section.settings.fs_title_2 }}px; color: {{ section.settings.title_cl_2 }};">{{ section.settings.text }}</div>
                    <div class="market-breakdown__item--text" style="font-size:{{ section.settings.fs_title_2 }}px; color: {{ section.settings.title_cl_2 }};">{{ section.settings.text_2 }}</div>
                </div>

                <div class="market-breakdown__item--title" style="font-size:{{ section.settings.fs_title_1 }}px; color: {{ section.settings.title_cl_1 }};">{{ section.settings.capital }}</div>
                <div class="market-breakdown__item--flex">
                    <div class="market-breakdown__item--info" style="font-size:{{ section.settings.fs_title }}px; color: {{ section.settings.title_cl }};">
                        {{ section.settings.title_2 }}
                        <span class="market-breakdown__item--value" style="font-size:{{ section.settings.fs_value }}px; color: {{ section.settings.value_cl }};">{{ section.settings.value }}</span>
                    </div>
                    <div class="market-breakdown__item--info" style="font-size:{{ section.settings.fs_title }}px; color: {{ section.settings.title_cl }};">
                        {{ section.settings.title_3 }}
                        <span class="market-breakdown__item--value" style="font-size:{{ section.settings.fs_value }}px; color: {{ section.settings.value_cl }};">{{ section.settings.value_2 }}</span>
                    </div>
                    <div class="market-breakdown__item--info" style="font-size:{{ section.settings.fs_title }}px; color: {{ section.settings.title_cl }};">
                        {{ section.settings.title_4 }}
                        <span class="market-breakdown__item--value" style="font-size:{{ section.settings.fs_value }}px; color: {{ section.settings.value_cl }};">{{ section.settings.value_3 }}</span>
                    </div>
                    <div class="market-breakdown__item--info" style="font-size:{{ section.settings.fs_title }}px; color: {{ section.settings.title_cl }};">
                        {{ section.settings.title_5 }}
                        <span class="market-breakdown__item--value" style="font-size:{{ section.settings.fs_value }}px; color: {{ section.settings.value_cl }};">{{ section.settings.value_4 }}</span>
                    </div>
                    <div class="market-breakdown__item--info" style="font-size:{{ section.settings.fs_title }}px; color: {{ section.settings.title_cl }};">
                        {{ section.settings.title_6 }}
                        <span class="market-breakdown__item--value" style="font-size:{{ section.settings.fs_value }}px; color: {{ section.settings.value_cl }};">{{ section.settings.value_5 }}</span>
                    </div>
                </div>
                {%- if section.settings.url_btn != blank and section.settings.title_btn != blank -%}
                    <a class="market-breakdown__item--btn" style="font-size:{{ section.settings.fs_btn }}px; color: {{ section.settings.btn_cl }};" target="_blank" href="{{ section.settings.url_btn }}">{{ section.settings.title_btn }}</a>
                {%- endif -%}
            </div>
            <div class="market-breakdown__item chart">
                {{ section.settings.chart }}
            </div>
        </div>
        <div class="market-breakdown__block">
            <div class="market-breakdown__item">
                <div class="market-breakdown__block-2--title" style="font-size:{{ section.settings.fs_block_2_title }}px; color: {{ section.settings.block_2_title_cl }};">{{ section.settings.block_2_title }}</div>
                <div class="market-breakdown__block-2--text" style="font-size:{{ section.settings.fs_block_2_text }}px; color: {{ section.settings.block_2_text_cl }};">{{ section.settings.block_2_text }}</div>
                {%- if section.settings.url_btn_2 != blank and section.settings.title_btn_2 != blank -%}
                    <a class="market-breakdown__block-2--btn" style="font-size:{{ section.settings.fs_btn_2 }}px; color: {{ section.settings.btn_cl_2 }};" target="_blank" href="{{ section.settings.url_btn_2 }}">{{ section.settings.title_btn_2 }}</a>
                {%- endif -%}
            </div>
            <div class="market-breakdown__item">
                {% assign sorted_articles = section.settings.blog.articles | sort: 'published_at' | reverse %}

                <div class="market-breakdown__blog--title" style="font-size:{{ section.settings.title_blog_fs }}px; color: {{ section.settings.title_blog_cl }};">{{ section.settings.title_blog }}</div>

                <div class="market-breakdown__blog--articles">
                {% for article in sorted_articles limit: 3 %}
                    <a href="{{ article.url }}" target="_blank" class="market-breakdown__blog--article">
                        <div class="market-breakdown__blog--article-title">{{ article.title }}</div>
                        <div class="market-breakdown__blog--article-date">{{ article.published_at | date: "%m-%d-%Y" }}</div>
                    </a>
                {% endfor %}
                </div>

                {%- if section.settings.url_btn_blog != blank and section.settings.title_btn_blog != blank -%}
                    <a class="market-breakdown__blog--btn" style="font-size:{{ section.settings.fs_btn_blog }}px; color: {{ section.settings.btn_cl_blog }};" target="_blank" href="{{ section.settings.url_btn_blog }}">{{ section.settings.title_btn_blog }}</a>
                {%- endif -%}
            </div>
        </div>
    </div>
    
</section>

