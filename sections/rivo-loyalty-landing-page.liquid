<link rel="stylesheet" type="text/css" href="{{ shop.metafields.ba_global.config.asset_urls.loy.lp_css }}"/>

<style type="text/css">
  :root {
    --rivo-title-font-family: {{ section.settings.title_font_family }};
    --rivo-subtitle-font-family: {{ section.settings.subtitle_font_family }};
    --rivo-primary-color: {{ section.settings.primary_color }};
    --rivo-secondary-color: {{ section.settings.secondary_color }};
    --rivo-page-background-color: {{section.settings.page_background_color }};
    --rivo-title-font-style: {{ section.settings.title_font_style }};
    --rivo-page-icon-color: {{section.settings.rivo_icon_color }};
    --rivo-card-background-color: {{ section.settings.card_background_color }};
    --rivo-card-font-color: {{section.settings.card_font_color }};
    --rivo-border-radius-square: 0px;
    --rivo-border-radius-rounded: 10px;
    --rivo-border-radius-circle: 30px;
    --rivo-card-height: {{ section.settings.card_height }}px;
    --rivo-page-max-width: {{ section.settings.page_max_width }}px;
    --rivo-card-container-max-width: {{ section.settings.card_container_max_width }}px;
    --rivo-card-corners: var(--rivo-border-radius-{{ section.settings.corner_type }});
    --rivo-card-title-font-family: {{ section.settings.card_title_font_family }};
    --rivo-card-title-font-weight: {{ section.settings.card_title_font_weight }};
    --rivo-card-subtitle-font-family: {{ section.settings.card_subtitle_font_family }};
    --rivo-card-subtitle-font-weight: {{ section.settings.card_subtitle_font_weight }};
    --rivo-card-title-font-size: {{ section.settings.card_title_font_size }}px;
    --rivo-card-subtitle-font-size: {{ section.settings.card_subtitle_font_size }}px;
    --rivo-card-icon-size: {{ section.settings.card_icon_size }}px;
    --rivo-page-section-title-font-size: {{ section.settings.section_title_font_size }}px;
    --rivo-page-section-title-font-weight: {{ section.settings.section_title_font_weight }};
    --rivo-page-section-subtitle-font-size: {{ section.settings.section_subtitle_font_size }}px;
    --rivo-page-section-subtitle-font-weight: {{ section.settings.section_subtitle_font_weight }};
    --rivo-page-section-title-font-color: {{ section.settings.section_title_font_color }};
    --rivo-page-section-subtitle-font-color: {{ section.settings.section_subtitle_font_color }};
    --rivo-page-section-padding: {{ section.settings.section_padding }}px;
    --rivo-modal-text-color: {{ section.settings.modal_font_color }};
    --rivo-modal-background-color: {{ section.settings.modal_background_color }};
    --rivo-modal-icon-color: {{ section.settings.modal_icon_color }};
    --rivo-modal-title-font-size: {{ section.settings.modal_title_font_size }}px;
    --rivo-modal-subtitle-font-size: {{ section.settings.modal_subtitle_font_size }}px;
    --rivo-modal-login-title-font-size: {{ section.settings.modal_login_title_font_size }}px;
    --rivo-modal-body-font-size: {{ section.settings.modal_body_font_size }}px;
    --rivo-modal-icon-size: {{ section.settings.modal_icon_size }}px;
    --rivo-modal-icon-position-top: {{ section.settings.modal_icon_position_top }}px;
    --rivo-modal-icon-position-right: {{ section.settings.modal_icon_position_right }}px;
    --rivo-vip-tier-table-progress-bar-width: {{ block.settings.vip_desktop_progress_bar_width }}%;
    --rivo-vip-tier-table-td-border-top: {{ block.settings.vip_table_tier_td_border_top }};
  }

  {% if section.settings.card_order == "horizontal" %}
    .rivo-card{
      flex-direction: row;
      gap: 15px;
      padding: 15px;
      text-align: left;
      min-height: 100px;
      justify-content: flex-start;
      position: relative;
    }
    .rivo-card-body{
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }
    .rivo-completed{
      padding-top: 5px;
      padding-left: 5px;
      opacity: 0.4;
    }
  {% endif %}

  {{ section.settings.custom_css}}
</style>

<script type="text/javascript">window.rivo_page_loader_enabled = true;</script>

{% assign translations = shop.metafields.ba_loy.config.translations %}
{% assign page_config = shop.metafields.ba_loy.config.loyalty_landing_page_settings %}
{% assign checkout_url = request.host | append: request.path %}
{% assign account_register_url = shop.metafields.ba_loy.config.custom_account_register_path | default: "/account/register" %}
{% assign account_login_url = shop.metafields.ba_loy.config.custom_account_login_path | default: "/account/login" %}

<div class="rivo-modal micromodal-slide" id="login-modal" aria-hidden="true">
  <div class="rivo-modal__overlay" tabindex="-1" data-micromodal-close>
    <div class="rivo-modal__container" role="dialog" aria-modal="true" aria-labelledby="modal-1-title">
      <header class="rivo-modal__header">
        <h2 class="rivo-modal__title" id="modal-1-title">
          {{ translations.acct_creation_title }}
        </h2>
        <button class="rivo-modal__close" aria-label="Close modal" data-micromodal-close></button>
      </header>
      <main class="rivo-modal__content">
        <p class="rivo-modal-p">{{ translations.visitor_point_desc }}</p>
        <div class="rivo-modal-cta">
          <a href="{{ account_register_url }}?checkout_url=https://{{ checkout_url }}" class="rivo-modal-button {{ page_config.primary_button_class_names | default: "rivo-modal__btn rivo-modal__btn-primary" }}">
            {{ translations.acct_creation_btn }}
          </a>
        </div>
        <p class="rivo-modal-p">
          <span>{{ translations.acct_creation_sign_in }}</span> &nbsp; <a href="{{ account_login_url }}?checkout_url=https://{{ checkout_url }}">{{ translations.general_sign_in }}</a>
        </p>
      </main>
    </div>
  </div>
</div>


