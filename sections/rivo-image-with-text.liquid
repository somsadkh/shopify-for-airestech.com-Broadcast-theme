<div class="rivo-content-wrapper" style="background: #F7E6C1;" id="rivo-referrals-gifts">
  <div class="rivo-lp-content">
    <div class="rivo-image-with-text-wrapper">
      <div class="rivo-image-with-text-column">
        <h2 class="rivo-lp-section-title color-is-dark">{{ section.settings.section_title }}</h2>
        <div class="rivo-rich-text">
          {{ section.settings.rich_text | raw }}
          <a
            href="{{ section.settings.button_link }}"
            class="button button--primary"
            role="button"
          >
            {{ section.settings.button_text }}
          </a>
        </div>
      </div>
      <div class="rivo-image-with-text-column">
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 1200 | image_tag: 
            loading: 'lazy', 
            class: 'rivo-section-image', 
            sizes: '(max-width: 768px) 100vw, 50vw',
            alt: section.settings.image.alt | escape
          }}
        {%- endif -%}
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "RIVO Image with Text",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Your Section Title Here"
    },
    {
      "type": "richtext",
      "id": "rich_text",
      "label": "Rich Text",
      "default": "<p>Add your content here.</p>"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Sign Up"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Section Image"
    }
  ],
  "presets": [
    {
      "name": "RIVO Image with Text",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<!-- Section CSS -->
<style>
  .rivo-image-with-text-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr; /* Equal width for columns */
    gap: 20px;
    align-items: center;
    letter-spacing: 0.025em;
  }

  .rivo-image-with-text-column {
    padding: 25px;
    text-align: left;
    justify-self: center;
    width: 100%;
  }

  .rivo-rich-text {
    font-size: 16px;
    line-height: 1.3;
  }

  .rivo-rich-text h3 {
    font-family: "Suisse Works", serif !important;
    font-weight: 700;
    color: #233437;
    -webkit-font-smoothing: antialiased;
  }

  .rivo-rich-text ul {
    list-style-type: disc;
    margin-left: 0;
    padding-left: 0;
    list-style: none;
    text-align: left;
    margin-bottom: 0;
  }

  .rivo-rich-text li {
    margin-bottom: 0;
    border-bottom: 0.5px solid #aec9d3;
    padding: 15px 0;
    color: #233437;
    -webkit-font-smoothing: antialiased;
    text-rendering: optimizeLegibility;
    font-family: "Moderat", sans-serif;
    align-content: center;
  }

  .rivo-rich-text li:last-of-type {
    border-bottom: 0;
    padding-bottom: 0;
  }

  .rivo-rich-text strong {
    font-weight: bold;
  }

  .rivo-rich-text {
    white-space: pre-line;
  }

  .rivo-image-with-text-column img {
    border-radius: 12px;
    width: 100%;
    height: auto;
    object-fit: cover;
    display: block;
  }

  #rivo-referrals-gifts .button {
    display: inline-block;
    display: none;
  }
  
  /* Mobile Styles */
@media (max-width: 768px) {
  .rivo-image-with-text-wrapper {
    grid-template-columns: 1fr;
    gap: 10px;
  }

  .rivo-rich-text {
    white-space: normal;
  }
  
  .rivo-image-with-text-column {
    text-align: center;
    padding: 15px 0;
  }

  .rivo-image-with-text-column img {
    max-height: 300px;
    object-fit: cover;
    object-position: bottom;
  }
  .rivo-rich-text li {
    min-height: 70px;
  }
}

</style>

