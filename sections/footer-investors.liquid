{{ "footer-investors.css" | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.8 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.8 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


<footer class="footer-investors section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}" ">
  <div class="footer-investors__items{% if section.settings.center_links %} footer-investors__items--center{% endif %}">
    {%- if section.settings.center_links -%}
      <div class="footer-investors__item-first">
        {%- for block in section.blocks -%}
          {%- if forloop.first == true -%}
            {%- if block.settings.link != blank -%}
              <a
                href="{{ block.settings.link }}"
                class="footer-investors__item"
                target="_blank">
                {{ block.settings.link_text }}
              </a>
            {%- else -%}
              <div class="footer-investors__item">
                {{- block.settings.link_text -}}
              </div>
            {%- endif -%}
          {%- endif -%}
        {%- endfor -%}
      </div>
      <div class="footer-investors__item-center">
        {%- for block in section.blocks -%}
          {%- if forloop.first == false and forloop.last == false -%}
            {%- if block.settings.link != blank -%}
              <a
                href="{{ block.settings.link }}"
                class="footer-investors__item"
                target="_blank">
                {{ block.settings.link_text }}
              </a>
            {%- else -%}
              <div class="footer-investors__item">
                {{- block.settings.link_text -}}
              </div>
            {%- endif -%}
          {%- endif -%}
        {%- endfor -%}
      </div>
      <div class="footer-investors__item-last">
        {%- for block in section.blocks -%}
          {%- if forloop.last == true -%}
            {%- if block.settings.link != blank -%}
              <a
                href="{{ block.settings.link }}"
                class="footer-investors__item"
                target="_blank">
                {{ block.settings.link_text }}
              </a>
            {%- else -%}
              <div class="footer-investors__item">
                {{- block.settings.link_text -}}
              </div>
            {%- endif -%}
          {%- endif -%}
        {%- endfor -%}
      </div>
    {% else %}
      {%- for block in section.blocks -%}
        {%- if block.settings.link != blank -%}
          <a
            href="{{ block.settings.link }}"
            class="footer-investors__item"
            target="_blank">
            {{ block.settings.link_text }}
          </a>
        {%- else -%}
          <div class="footer-investors__item">
            {{- block.settings.link_text -}}
          </div>
        {%- endif -%}
      {%- endfor -%}
    {%- endif -%}
  </div>
</footer>

{% schema %}
  {
    "name": "Footer investors",
    "settings": [
      {
        "type": "header",
        "content": "Colors"
      },
      {
        "type": "color_scheme",
        "id": "section_color_scheme",
        "label": "Color scheme",
        "default": "scheme-1"
      },
      {
        "type": "checkbox",
        "id": "center_links",
        "label": "Center links",
        "info": "Use 3 or more items",
        "default": false
      },
      {
        "type": "header",
        "content": "Padding"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "name": "Link",
        "type": "link",
        "settings": [
          {
            "type": "inline_richtext",
            "id": "link_text",
            "label": "Link text"
          }, {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Footer investors"
      }
    ]
  }
{% endschema %}